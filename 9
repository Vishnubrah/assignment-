#include <stdio.h>

int findLargestElement(int[], int);

int main() {
    int n, array[100], largest;

    printf("Enter the number of elements to be stored in the array: ");
    scanf("%d", &n);

    printf("Enter %d elements in the array: \n", n);
    for (int i = 0; i < n; i++) {
        printf("element - %d : ", i);
        scanf("%d", &array[i]);
    }

    largest = findLargestElement(array, n);

    printf("The largest element in the array is : %d\n", largest);

    return 0;
}

int findLargestElement(int array[], int n) {
    int largest = array[0];

    for (int i = 1; i < n; i++) {
        if (array[i] > largest) {
            largest = array[i];
        }
    }

    return largest;
}
